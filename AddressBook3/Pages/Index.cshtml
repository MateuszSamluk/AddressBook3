@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @Model.Name</h1><br />
    <form method="post">
        <div class="form-row">
            <div class="form-group col-md-3">
                <label asp-for="Address.Street"></label><br />
                <input asp-for="Address.Street" /><br />
                <span asp-validation-for="Address.Street" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.Number"></label><br />
                <input asp-for="Address.Number" />
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.ZipCode"></label><br />
                <input asp-for="Address.ZipCode" /><br />
                <span asp-validation-for="Address.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label asp-for="Address.City"></label><br />
                <input asp-for="Address.City" /><br />
                <span asp-validation-for="Address.City" class="text-danger"></span><br /><br />
            </div>
            <div class="form-group col-md-12">
                <button type="submit" class="btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>
